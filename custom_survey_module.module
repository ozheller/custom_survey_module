    }
    if ($discomfort == 3) {
      $score -= 1;
    }
    if ($discomfort >= 7 && $discomfort <= 8) {
      $score += 1;
    }
    if ($discomfort >= 9 && $discomfort <= 10) {
      $score += 2;
    }

