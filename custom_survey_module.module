      $score -= 1;
    }
    if ($steps >= 7 && $steps <= 8) {
      $score += 1;
    }
    if ($steps >= 9 && $steps <= 10) {
      $score += 2;
    }

    if ($gender == 0) {
      if ($pushups == 0) {
        $score += 1;
      }
      if ($pushups == 1) {
        $score += 0;
      }
      if ($pushups == 2 || $pushups == 3) {
        $score -= 1;
      }
    }
